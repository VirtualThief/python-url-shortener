<!doctype html>

<html lang="en">
<head>
  {% block head %}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <title>{% block title %}The link shortener{% endblock title %}</title>
  <meta name="description" content="Link shortener">
  <meta name="author" content="Dmitry Petukhov">
  
  <!-- Bootstrap -->
